<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_mom_meeting" model="ir.actions.act_window">
        <field name="name">Meetings</field>
        <field name="res_model">mom.meeting</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_my_meetings': not user.has_group('MOM.group_mom_manager'),
            'search_default_group_by_department': user.has_group('MOM.group_mom_manager')
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first meeting minutes!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_mom_root"
              name="Meeting Minutes"
              sequence="10"/>

    <menuitem id="menu_mom_meeting"
              name="Meetings"
              parent="menu_mom_root"
              action="action_mom_meeting"
              sequence="10"/>
</odoo>
