<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Daily Cron Job to Update Action Plan Countdown Values -->
        <record id="ir_cron_mom_update_countdowns" model="ir.cron">
            <field name="name">MOM: Update Action Plan Countdowns</field>
            <field name="model_id" ref="model_mom_action_plan"/>
            <field name="state">code</field>
            <field name="code">model._update_all_countdowns()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">true</field>
            <field name="doall">false</field>
        </record>
    </data>
</odoo>
