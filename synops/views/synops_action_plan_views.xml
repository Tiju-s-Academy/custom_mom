<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_synops_action_plan_form" model="ir.ui.view">
        <field name="name">synops.action.plan.form</field>
        <field name="model">synops.action.plan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Action Item"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="mom_id"/>
                            <field name="assignee_id"/>
                            <field name="deadline"/>
                        </group>
                        <group>
                            <field name="todo_id"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_synops_action_plan_tree" model="ir.ui.view">
        <field name="name">synops.action.plan.tree</field>
        <field name="model">synops.action.plan</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='cancelled'"
                  decoration-success="state=='done'"
                  decoration-info="state=='in_progress'"
                  decoration-muted="state=='new'">
                <field name="name"/>
                <field name="mom_id"/>
                <field name="assignee_id"/>
                <field name="deadline"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_synops_action_plan_search" model="ir.ui.view">
        <field name="name">synops.action.plan.search</field>
        <field name="model">synops.action.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="mom_id"/>
                <field name="assignee_id"/>
                <filter string="My Actions" name="my_actions" domain="[('assignee_id', '=', uid)]"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Assignee" name="group_assignee" context="{'group_by': 'assignee_id'}"/>
                    <filter string="MOM" name="group_mom" context="{'group_by': 'mom_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
