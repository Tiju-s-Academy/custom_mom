<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_synops_mom_form" model="ir.ui.view">
        <field name="name">synops.mom.form</field>
        <field name="model">synops.mom</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" 
                            states="submitted" groups="synops.group_synops_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,submitted"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="meeting_date"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="duration" widget="float_time"/>
                            <field name="venue"/>
                            <field name="location" attrs="{'invisible': [('venue', '=', 'online')]}"/>
                        </group>
                        <group>
                            <field name="prepared_by_id"/>
                            <field name="approved_by_id"/>
                            <field name="next_meeting_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Participants">
                            <group>
                                <field name="attendee_ids" widget="many2many_tags"/>
                                <field name="absentee_ids" widget="many2many_tags"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Discussion">
                            <group>
                                <field name="discussion_points"/>
                                <field name="current_status"/>
                            </group>
                        </page>
                        <page string="Action Plans">
                            <field name="action_plan_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="assignee_id"/>
                                    <field name="deadline"/>
                                    <field name="state"/>
                                    <field name="todo_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_synops_mom_tree" model="ir.ui.view">
        <field name="name">synops.mom.tree</field>
        <field name="model">synops.mom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="meeting_date"/>
                <field name="prepared_by_id"/>
                <field name="venue"/>
                <field name="state" decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_synops_mom_search" model="ir.ui.view">
        <field name="name">synops.mom.search</field>
        <field name="model">synops.mom</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="prepared_by_id"/>
                <field name="department_ids"/>
                <filter string="My MOMs" name="my_moms" domain="[('prepared_by_id', '=', uid)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Prepared By" name="group_prepared_by" context="{'group_by': 'prepared_by_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
