<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="action_synops_mom" model="ir.actions.act_window">
        <field name="name">Meeting Minutes</field>
        <field name="res_model">synops.mom</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_moms': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Meeting Minutes!
            </p>
        </field>
    </record>

    <record id="action_synops_action_plans" model="ir.actions.act_window">
        <field name="name">Action Plans</field>
        <field name="res_model">synops.action.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_actions': 1}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_synops_root"
        name="Synops"
        sequence="50"
        web_icon="synops,static/description/icon.png"/>

    <menuitem id="menu_synops_mom"
        name="Meeting Minutes"
        parent="menu_synops_root"
        action="action_synops_mom"
        sequence="10"/>

    <menuitem id="menu_synops_action_plans"
        name="Action Plans"
        parent="menu_synops_root"
        action="action_synops_action_plans"
        sequence="20"/>

    <menuitem id="menu_synops_config"
        name="Configuration"
        parent="menu_synops_root"
        sequence="100"
        groups="group_synops_admin"/>
</odoo>
