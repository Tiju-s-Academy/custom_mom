<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="group_synops_user" model="res.groups">
            <field name="name">Synops User</field>
            <field name="category_id" ref="base.module_category_productivity_meetings"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_synops_manager" model="res.groups">
            <field name="name">Synops Manager</field>
            <field name="category_id" ref="base.module_category_productivity_meetings"/>
            <field name="implied_ids" eval="[(4, ref('group_synops_user'))]"/>
        </record>

        <record id="group_synops_admin" model="res.groups">
            <field name="name">Synops Administrator</field>
            <field name="category_id" ref="base.module_category_productivity_meetings"/>
            <field name="implied_ids" eval="[(4, ref('group_synops_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_synops_mom_user" model="ir.rule">
            <field name="name">User can only see own MOMs</field>
            <field name="model_id" search="[('model', '=', 'synops.mom')]"/>
            <field name="domain_force">[('prepared_by_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_synops_mom_manager" model="ir.rule">
            <field name="name">Manager can see team MOMs</field>
            <field name="model_id" search="[('model', '=', 'synops.mom')]"/>
            <field name="domain_force">['|', '|',
                ('prepared_by_id', '=', user.id),
                ('prepared_by_id.employee_id.parent_id.user_id', '=', user.id),
                ('prepared_by_id.employee_id.parent_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_manager'))]"/>
        </record>

        <record id="rule_synops_mom_admin" model="ir.rule">
            <field name="name">Admin can see all MOMs</field>
            <field name="model_id" search="[('model', '=', 'synops.mom')]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_synops_admin'))]"/>
        </record>
    </data>
</odoo>
