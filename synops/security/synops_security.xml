<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="module_category_synops" model="ir.module.category">
            <field name="name">Synops</field>
            <field name="description">Meeting Minutes Management</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_synops_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_synops"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_synops_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_synops"/>
            <field name="implied_ids" eval="[(4, ref('group_synops_user'))]"/>
        </record>

        <record id="group_synops_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_synops"/>
            <field name="implied_ids" eval="[(4, ref('group_synops_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- User Rules -->
        <record id="rule_synops_mom_user" model="ir.rule">
            <field name="name">User can only see own MOMs</field>
            <field name="model_id" ref="model_synops_mom"/>
            <field name="domain_force">[('prepared_by_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_user'))]"/>
        </record>

        <!-- Manager Rules -->
        <record id="rule_synops_mom_manager" model="ir.rule">
            <field name="name">Manager can see team MOMs</field>
            <field name="model_id" model="ir.model" eval="obj().env.ref('synops.model_synops_mom').id"/>
            <field name="domain_force">['|', '|',
                ('prepared_by_id', '=', user.id),
                ('prepared_by_id.employee_id.parent_id.user_id', '=', user.id),
                ('prepared_by_id.employee_id.parent_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_manager'))]"/>
        </record>

        <!-- Admin Rules -->
        <record id="rule_synops_mom_admin" model="ir.rule">
            <field name="name">Admin can see all MOMs</field>
            <field name="model_id" model="ir.model" eval="obj().env.ref('synops.model_synops_mom').id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_synops_admin'))]"/>
        </record>

        <!-- Action Plan Rules -->
        <record id="rule_synops_action_plan_user" model="ir.rule">
            <field name="name">User can see assigned action plans</field>
            <field name="model_id" model="ir.model" eval="obj().env.ref('synops.model_synops_action_plan').id"/>
            <field name="domain_force">[('assignee_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_user'))]"/>
        </record>

        <record id="rule_synops_action_plan_manager" model="ir.rule">
            <field name="name">Manager can see team action plans</field>
            <field name="model_id" model="ir.model" eval="obj().env.ref('synops.model_synops_action_plan').id"/>
            <field name="domain_force">['|',
                ('assignee_id', '=', user.id),
                ('assignee_id.employee_id.parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_synops_manager'))]"/>
        </record>
    </data>
</odoo>
